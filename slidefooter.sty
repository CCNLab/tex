\def\slidefoottext{ ---slide foot text--- }

\def\ps@headings{%
  \def\ps@slide{%
    \def\@oddfoot{\@mainsize \mbox{} \hfil \mbox{}}
    \def\@oddhead{\@mainsize
      \vbox to0pt{
        \hbox {\hskip\sframelmargin \fbox{\hbox {\Huge \theslide} \hfil \mbox{}}}
        \vss}}
    \def\@evenfoot{\@mainsize \mbox{} \hfil \mbox {}}
    \def\@evenhead{}}

  \def\ps@overlay{%
    \def\@oddfoot{\@mainsize \mbox{}\hfil\hbox to3em{\Huge \theoverlay\hss}}%
    \def\@oddhead{}%
    \def\@evenfoot{\@mainsize \mbox{}\hfil\hbox to3em{\Huge \theoverlay\hss}}%
    \def\@evenhead{}}

  \def\ps@note{%
    \def\@oddfoot{%
      \@mainsize
      \if@clock \fbox{\large \arabic{minutes} min}\else \hbox{}\fi
      \hfil\thenote}%
    \def\@oddhead{}%
    \def\@evenfoot{%
      \@mainsize
      \if@clock \fbox{\large \arabic{minutes} min}\else \hbox{}\fi
      \hfil\thenote}%
    \def\@evenhead{}}}
