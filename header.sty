\newcommand{\up}{$\wedge$}
\newcommand{\word}[1]{{\sc #1}}
\newcommand{\pron}[1]{/#1/}
\newcommand{\say}[2]{\word{#1}\,\linebreak[0]$\Rightarrow$\linebreak[0]\pron{#2}}
\newcommand{\error}[2]{\word{#1}\,\linebreak[0]$\Rightarrow$\linebreak[0]``#2''}
\newcommand{\resp}[2]{\error{#1}{#2}}
\newcommand{\phloc}[3]{{\tt /#1}~{\tt #2}~{\tt #3/}}
\newcommand{\phon}[7]{{\tt /#1}~{\tt #2}~{\tt #3}~{\tt #4}~{\tt #5}~{\tt #6}~{\tt #7/}}
\newcommand{\conns}[2]{${\tt #1}\!\!\Rightarrow\!\!{\tt #2}$}
\newcommand{\biconns}[2]{${\tt #1}\!\!\Leftrightarrow\!\!{\tt #2}$}
\newcommand{\lesion}[3]{\conns{#1}{#2}(#3)}
\newcommand{\bilesion}[3]{\biconns{#1}{#2}(#3)}
\newcommand{\blend}[4]{\word{#1}\,\linebreak[0]$\Rightarrow$\linebreak[0]\phloc{#2}{#3}{#4}}
\newcommand{\VthenS}[3]{\word{#1}\,\linebreak[0]$\Rightarrow$\linebreak[0](#2)\linebreak[0]$\Rightarrow$\linebreak[0]``#3''}
%\newcommand{\net}[1]{{\bf #1}}
\newcommand{\obj}[1]{{\sl #1\/}}
\newcommand{\objerror}[2]{\obj{#1}\,\linebreak[0]$\Rightarrow$\linebreak[0]``#2''}
\newcommand{\no}[1]{$\overline{\rm #1}$}
\newcommand{\persev}[3]{(``#1'')\ \objerror{#2}{#3}}
\newcommand{\blank}{\(\underline{\rm\ \ }\)}
\newcommand{\arr}{\linebreak[0]$\rightarrow$\linebreak[0]}
\newcommand{\triple}[3]{$_{\rm #1}$#2$_{\rm #3}$}

\let\ul\underline

\newcommand{\DRAFT}{{\bf DRAFT} of \today, \protect\now}

\let\@internalthanks\thanks
