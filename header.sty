\newenvironment{widecenter}{\begin{list}{}{\leftmargin -1in\rightmargin -1in}\centering \item}{\end{list}}

\newenvironment{enumerateSpaced}[1]{
\ifnum \@enumdepth >3 \@toodeep\else\advance\@enumdepth \@ne 
\edef\@enumctr{enum\romannumeral\the\@enumdepth}\list
{\csname label\@enumctr\endcsname}{\topsep #1\itemsep #1\parskip 0em\parsep 0em\usecounter
{\@enumctr}\def\makelabel##1{\hss\llap{##1}}}\fi}{\endlist}

\newenvironment{enumerateSpacedIndented}[2]{
\ifnum \@enumdepth >3 \@toodeep\else\advance\@enumdepth \@ne 
\edef\@enumctr{enum\romannumeral\the\@enumdepth}\list
{\csname label\@enumctr\endcsname}{\leftmargin #2
\topsep #1\itemsep #1\parskip 0em\parsep 0em\usecounter
{\@enumctr}\def\makelabel##1{\hss\llap{##1}}}\fi}{\endlist}

\newenvironment{itemizeMark}[1]{
\list{#1}{
\parskip 0em\parsep 0em\def\makelabel##1{\hss\llap{##1}}}}{\endlist}

\newenvironment{itemizeSpaced}[1]{
\ifnum \@itemdepth >3 \@toodeep\else \advance\@itemdepth \@ne
\edef\@itemitem{labelitem\romannumeral\the\@itemdepth}%
\list{\csname\@itemitem\endcsname}{
\topsep #1\itemsep #1\parskip 0em\parsep 0em\def\makelabel##1{\hss\llap{##1}}}\fi}{\endlist}

\newenvironment{itemizeSpacedIndented}[2]{
\ifnum \@itemdepth >3 \@toodeep\else \advance\@itemdepth \@ne
\edef\@itemitem{labelitem\romannumeral\the\@itemdepth}%
\list{\csname\@itemitem\endcsname}{\leftmargin #2
\topsep #1\itemsep #1\parskip 0em\parsep 0em\def\makelabel##1{\hss\llap{##1}}}\fi}{\endlist}

\newenvironment{itemizesp}{\bgroup\samepage\begin{itemize}}{\end{itemize}\egroup}
\newenvironment{enumeratesp}{\bgroup\samepage\begin{enumerate}}{\end{enumerate}\egroup}


\newenvironment{slidelist}{\begin{list}{}{\leftmargin 0em\itemsep 1em}}{\end{list}}
\newenvironment{plainlist}{\begin{list}{}{\leftmargin 0em\itemsep 0.5em}}{\end{list}}
\newenvironment{plainindent}[1]{\begin{list}{}{\leftmargin #1\item}}{\end{list}}

